<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarlienhe"
        android:background="#EF5350"
        app:title="Liên hệ"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Thông Tin Liên Hệ"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="25sp"
            android:textColor="#d6502e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="40sp"
            android:background="@drawable/thongtin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="47D Nguyễn Thông Phường 9 Quận 3"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#292727"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.dangm.appbanhang.Activity.LienHeActivity" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>




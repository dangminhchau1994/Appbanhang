<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dangm.appbanhang.Activity.ChiTietSanPham">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolchitiet"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="#ffffff"
        android:background="#EF5350"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hinhanhmota"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/motatensanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Tên sản phẩm"
                android:textColor="#df3f3f"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/motagiasanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Giá sản phẩm"
                android:textColor="#9ad92c"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnSoLuong"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner"
                >
            </Spinner>

            <Button
                android:id="@+id/btnAdd"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm giỏ hàng"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Mô tả sản phẩm"
            android:textSize="25sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#4ec6b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/noidungmota"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="#393737"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </ScrollView>
    </LinearLayout>
</LinearLayout>
